include ../positioner/positioner
include ../title/title
include ../button/button
include ../question-form/question-form

mixin questions
    section.questions
        +positioner
            .questions__wrapper
                +title.questions__title Остались вопросы?
                p.questions__text Наши специалисты ответят на любой интересубщий вопрос
                +button.questions__button.button Задать вопрос
            +question-form({color: 'primary'})