include ../positioner/positioner
include ../title/title
include ../button/button
include ../question-form/question-form

mixin questions
    section.questions
        +positioner
            .questions__wrapper
                +title('Остались вопросы?').questions__title
                p.questions__text Наши специалисты ответят на любой интересубщий вопрос
                +button('Задать вопрос').questions__button.question-button
            +question-form('primary')